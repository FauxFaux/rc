[user]
	name = Chris West (Faux)
	email = git@goeswhere.com
[core]
	pager = most
	logAllRefUpdates = on
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	co = checkout
	fa = fetch --all
	fe = fetch
	rc = rebase --continue
	rs = rebase --skip
	ri = rebase --interactive
	ra = rebase --abort
	sl = stash list
	st = status
	d = diff
	di = diff
	pu = pull
	aa = add -A
	a = add
	ci = commit
	rh = reset --hard
	rp = repack -adf
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
